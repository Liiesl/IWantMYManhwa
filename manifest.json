{
  "manifest_version": 3,
  "name": "IWantMYManhwa",
  "version": "1.4",
  "description": "Downloads manhwa chapters in bulk from multiple sites as ZIP files via the side panel.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "*://*.webtoonscan.com/*",
    "*://cdn4.webtoonscan.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.webtoonscan.com/manhwa/*"],
      "js": ["content.js"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "48": "icons/icon48.png" 
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "jszip.min.js",
        "imageTabWorker.js",
        "docs/*",
        "sites/*.js"
      ],
      "matches": ["<all_urls>"] 
    }
  ]
}